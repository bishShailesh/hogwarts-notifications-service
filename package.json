{
  "name": "hogwarts-notifications-service",
  "version": "1.0.0",
  "description": "The Hogwarts Notifications Service helps Hogwarts professors and students send, receive, and manage enchanted notifications.",
  "main": "index.js",
  "config": {
    "apiSpecPath": "./api/api.yaml",
    "generatedTypesPath": "./src/gen/api.d.ts"
  },
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf ./src/gen",
    "lint": "eslint . --ext .ts",
    "build:watch": "tsc --watch",
    "test": "LOG_LEVEL=error jest",
    "lint:api": "npx @redocly/cli lint $npm_package_config_apiSpecPath",
    "generate:types": "dtsgen --out $npm_package_config_generatedTypesPath $npm_package_config_apiSpecPath",
    "sls:offline": "npm run build && npx serverless offline --stage offline",
    "sls:offline:watch": "npx serverless offline --stage offline --reloadHandler",
    "format": "prettier --write .",
    "dynamodb:start:manual": "java -Djava.library.path=.dynamodb/DynamoDBLocal_lib -jar .dynamodb/DynamoDBLocal.jar -sharedDb -port 8000"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@redocly/cli": "^2.5.1",
    "@serverless/utils": "^6.15.0",
    "@types/aws-lambda": "^8.10.156",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "dtsgenerator": "^3.19.2",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "prettier": "^3.6.2",
    "serverless": "^4.21.0",
    "serverless-offline": "^14.4.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.911.0",
    "@aws-sdk/client-sqs": "^3.911.0",
    "@aws-sdk/lib-dynamodb": "^3.911.0",
    "uuid": "^13.0.0",
    "winston": "^3.18.3"
  }
}
